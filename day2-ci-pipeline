pipeline {
    agent any
    stages {
        stage('code from scm') {
            steps {
                git credentialsId: 'git-key', url: 'git@github.com:gopal1409/soc-jenkins-integrationnov1125.git'
            }
        }
        stage('build the code') {
            steps {
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('test the code') {
            steps {
                sh 'mvn test'
                junit 'target/surefire-reports/*.xml'
            }
        }
        stage('check style testing') {
            steps {
                sh 'mvn checkstyle:checkstyle'
            }
        }
    }
}
